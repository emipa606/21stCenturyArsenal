<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationAddModExtension">
    <xpath>*/ThingDef[defName="Bullet_Shotgun_21CA"]</xpath>
    <value>
      <li Class="ProperShotguns.ShotgunExtension">
        <pelletCount>8</pelletCount>
      </li>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>*/ThingDef[defName="Bullet_Shotgun"]/graphicData/texPath</xpath>
    <value>
      <texPath>Things/Projectile/Bullet_Small</texPath>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>*/ThingDef[defName="Axi_S_M26MASS_21CA" or defName="Axi_S_VEPR12_21CA"]/verbs/li/verbClass</xpath>
    <value>
      <verbClass>ProperShotguns.Verb_ShootShotgun</verbClass>
    </value>
  </Operation>
</Patch>