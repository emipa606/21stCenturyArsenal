<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_MPX_21CA</defName>
    <label>MPX bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.15</drawSize>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>15</damageAmountBase>
      <speed>51</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Axi_SMG_MPX_21CA</defName>
    <label>SIG MPX</label>
    <description>Developed by SIG Sauer, the MPX is a 9mm submachine gun that, while visually similar to the MP5, has more in common mechanically with assault rifles then other SMGs.</description>
    <graphicData>
      <texPath>Things/SMG_MPX</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.15</drawSize>
    </graphicData>
    <soundInteract>Interact_SMG</soundInteract>
    <statBases>
      <WorkToMake>22000</WorkToMake>
      <Mass>2.7</Mass>
      <AccuracyTouch>.9</AccuracyTouch>
      <AccuracyShort>.8</AccuracyShort>
      <AccuracyMedium>.5</AccuracyMedium>
      <AccuracyLong>.21</AccuracyLong>
      <RangedWeapon_Cooldown>1.1</RangedWeapon_Cooldown>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>BlowbackOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
    <costList>
      <Steel>68</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_MPX_21CA</defaultProjectile>
        <warmupTime>.95</warmupTime>
        <range>23</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>9</ticksBetweenBurstShots>
        <soundCast>Shot_MachinePistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>6</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>