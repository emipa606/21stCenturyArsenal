      <AccuracyTouch>.7</AccuracyTouch>
      <AccuracyShort>.8</AccuracyShort>
      <AccuracyMedium>.7</AccuracyMedium>
      <AccuracyLong>.65</AccuracyLong>
      <RangedWeapon_Cooldown>1.2</RangedWeapon_Cooldown>
