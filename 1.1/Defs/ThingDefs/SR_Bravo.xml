<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Bravo_21CA</defName>
    <label>Howa Bravo bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.15</drawSize>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>23</damageAmountBase>
      <speed>120</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Axi_SR_Bravo_21CA</defName>
    <label>Howa Bravo</label>
    <description>Following Howa's legacy for match-quality precision rifles, the Bravo utilizes a spacer-age polymer stock with a molded-in-place aluminum bedding, allowing for an extremely rigid mounting point between the stock and action while minimizing mechanical complexity. It can be found across the cluster in the hands on big-game hunters, police snipers and mercenaries.</description>
    <graphicData>
      <texPath>Things/SR_Bravo</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.15</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>50000</WorkToMake>
      <Mass>4.2</Mass>
      <AccuracyTouch>.45</AccuracyTouch>
      <AccuracyShort>.65</AccuracyShort>
      <AccuracyMedium>.81</AccuracyMedium>
      <AccuracyLong>.88</AccuracyLong>
      <RangedWeapon_Cooldown>2.5</RangedWeapon_Cooldown>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
    <costList>
      <Steel>70</Steel>
      <ComponentIndustrial>8</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Bravo_21CA</defaultProjectile>
        <warmupTime>3.4</warmupTime>
        <range>45</range>
        <soundCast>Shot_SniperRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2.1</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2.4</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>